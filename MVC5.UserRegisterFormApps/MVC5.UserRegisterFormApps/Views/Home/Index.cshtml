@model MVC5.UserRegisterFormApps.Models.Entities.RegisterUser
@{
    Layout = "~/Views/Shared/masterPage.cshtml";
}



        <div class="col-md-12">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">İsim:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="name" name="name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Soyisim:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="lastName" name="lastName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Email Adres:</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="emailAddress" name="emailAddress" onchange="checkEmailAddress()">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="email">Şifre:</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="password" name="password">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">Kayıt Oluştur</button>
                            <a class="btn btn-primary" href="@Url.Action("getUserList","Home")">Kayıtlı Kullanıcı Listesi</a>
                        </div>
                    </div>

                    if (ViewBag.isSuccess != null && ViewBag.isSuccess == true)
                    {
                        <div class="alert alert-success" role="alert">
                            @ViewBag.message
                        </div>
                    }
                    else if (ViewBag.isSuccess != null && ViewBag.isSuccess == false)
                    {
                        <div class="alert alert-warning" role="alert">
                            @ViewBag.message
                        </div>
                    }
                }
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
